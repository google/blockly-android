<resources>
    <declare-styleable name="BlocklyWorkspaceTheme">
        <!-- The style to use for BlockViews. Should define BlocklyBlockView attrs.-->
        <attr name="blockViewStyle" format="reference" />
        <!-- The style to use for FieldLabelViews in this workspace. Should define attributes
            from BlocklyFieldView and BlocklyFieldLabelView -->
        <attr name="fieldLabelStyle" format="reference"/>
        <!-- The minimum scaling supported by the workspace -->
        <attr name="minScale" format="float|reference" />
        <!-- The maximum scaling supported by the workspace -->
        <attr name="maxScale" format="float|reference" />
        <!-- The default scaling to use in the workspace -->
        <attr name="defaultScale" format="float|reference" />
    </declare-styleable>

    <declare-styleable name="BlocklyBlockView">
        <!-- The default horizontal space between fields -->
        <attr name="fieldHorizontalPadding" format="dimension|reference"/>
        <!-- The default vertical padding between fields -->
        <attr name="fieldVerticalPadding" format="dimension|reference"/>
        <!-- The min height for a Block with nothing in it. -->
        <attr name="minBlockHeight" format="dimension|reference"/>
        <!-- Padding around fields and inputs and the edge of the block -->
        <attr name="innerPadding" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="BlocklyFieldView">
        <!-- The style to use for text if this view renders text inline. -->
        <attr name="textAppearance" format="reference" />
        <!-- The minimum height for any FieldView -->
        <attr name="fieldMinHeight" format="dimension|reference"/>
        <!-- The minimum width for any FieldView -->
        <attr name="fieldMinWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="BlocklyFieldLabelView">
        <!-- Empty style for adding label specific attributes -->
    </declare-styleable>

    <!-- Base class of ToolboxFragment and TrashFragment. -->
    <declare-styleable name="ScrollableBlockDrawerFragment">
        <attr name="closeable" format="boolean"/> <!-- Default false -->

        <attr name="scrollOrientation">
            <!-- Same values as LinearLayoutManager constants. -->
            <flag name="horizontal" value="0"/> <!-- SCROLL_HORIZONTAL. Default. -->
            <flag name="vertical" value="1"/> <!-- SCROLL_VERTICAL. -->
        </attr>
    </declare-styleable>

    <declare-styleable name="ToolboxFragment" parent="ScrollableBlockDrawerFragment">
        <attr name="tabEdge">
            <!-- Values match Gravity constants. -->
            <flag name="top" value="0x00000030"/>
            <flag name="bottom" value="0x00000050"/>
            <flag name="start" value="0x00800003"/> <!-- Default -->
            <flag name="end" value="0x00800005"/>
        </attr>

        <attr name="rotateTabs" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TrashFragment" parent="ScrollableBlockDrawerFragment" />

    <declare-styleable name="CategoryEdgeTabs">
        <attr name="labelRotation">
            <!-- Values match com.google.blockly.ui.Rotation, used by RotationContainer. -->
            <flag name="none" value="0x00000000"/> <!-- No rotation. Default. -->
            <flag name="cw" value="0x00000001"/> <!-- Clockwise -->
            <flag name="ccw" value="0x00000002"/> <!-- Counter-clockwise -->
            <flag name="left" value="0x00000002"/> <!-- Counter-clockwise synonym. Top of view moves left. -->
            <flag name="right" value="0x00000001"/> <!-- Clockwise synonym. Top of view moves right. -->
            <flag name="start" value="0x00000012"/> <!-- RTL adaptive counter-clockwise -->
            <flag name="end" value="0x00000011"/> <!-- RTL adaptive counter-clockwise -->
        </attr>
    </declare-styleable>
</resources>