<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BlocklyTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StylesDemoTheme" parent="BlocklyTheme">
        <item name="blockViewStyle">@style/BlockStyle1</item>
        <item name="fieldStyle">@style/FieldStyle1</item>
    </style>

    <style name="BlockStyle1" parent="DefaultBlockStyle">
        <item name="fieldHorizontalPadding">12dp</item>
        <item name="fieldVerticalPadding">32dp</item>
    </style>

    <style name="FieldStyle1" parent="DefaultFieldStyle">
        <item name="textAppearance">@style/TextAppearance.AppCompat.Large.Inverse</item>
        <item name="fieldMinHeight">128dip</item>
    </style>

</resources>
