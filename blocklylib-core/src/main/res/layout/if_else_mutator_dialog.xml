<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/if_else_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mutator_if_else_ifelse_count"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/add_if_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blockly_trash"/>
        <ImageView
            android:id="@+id/remove_if_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blockly_trash"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/else_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mutator_if_else_else_count"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/add_remove_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>